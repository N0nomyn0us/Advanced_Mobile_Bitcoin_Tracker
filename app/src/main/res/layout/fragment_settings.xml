<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#111827"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Header -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Settings"
            android:textColor="#FFFFFF"
            android:textSize="32sp"
            android:textStyle="bold"
            android:layout_marginBottom="24dp"/>

        <!-- Profile Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="User Profile"
            android:textColor="#FBBF24"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp"/>

        <!-- Name Input -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:textColorHint="#9CA3AF"
            app:boxBackgroundColor="#374151"
            app:boxCornerRadiusTopStart="8dp"
            app:boxCornerRadiusTopEnd="8dp"
            app:boxCornerRadiusBottomStart="8dp"
            app:boxCornerRadiusBottomEnd="8dp"
            app:boxStrokeColor="#FBBF24"
            app:hintTextColor="#FBBF24">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Your Name"
                android:textColor="#FFFFFF"
                android:inputType="textPersonName"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Bio Input -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:textColorHint="#9CA3AF"
            app:boxBackgroundColor="#374151"
            app:boxCornerRadiusTopStart="8dp"
            app:boxCornerRadiusTopEnd="8dp"
            app:boxCornerRadiusBottomStart="8dp"
            app:boxCornerRadiusBottomEnd="8dp"
            app:boxStrokeColor="#FBBF24"
            app:hintTextColor="#FBBF24">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_bio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Bio / Status"
                android:textColor="#FFFFFF"
                android:inputType="textShortMessage"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Save Button -->
        <Button
            android:id="@+id/btn_save_profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Save Profile"
            android:backgroundTint="#FBBF24"
            android:textColor="#111827"
            android:textStyle="bold"
            android:layout_marginBottom="32dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#374151"
            android:layout_marginBottom="32dp"/>

        <!-- App Preferences Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Preferences"
            android:textColor="#FBBF24"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp"/>

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/switch_biometric"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Biometric Lock"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:minHeight="48dp"
            app:thumbTint="#FBBF24"
            app:trackTint="#4B5563"
            android:layout_marginBottom="12dp"/>

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/switch_shake"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Shake to Refresh"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:minHeight="48dp"
            app:thumbTint="#FBBF24"
            app:trackTint="#4B5563"
            android:layout_marginBottom="12dp"/>

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/switch_notifications"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Background Price Alerts (15m)"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:minHeight="48dp"
            app:thumbTint="#FBBF24"
            app:trackTint="#4B5563"
            android:layout_marginBottom="32dp"/>

        <!-- NEW: Logout Button -->
        <Button
            android:id="@+id/btn_logout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Log Out"
            android:backgroundTint="#EF4444"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:layout_marginBottom="16dp"/>

        <!-- About Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="bottom|center_horizontal"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bitcoin Tracker App"
                android:textColor="#6B7280"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Version 1.3.0"
                android:textColor="#6B7280"
                android:textSize="12sp"/>
        </LinearLayout>

    </LinearLayout>
</ScrollView>